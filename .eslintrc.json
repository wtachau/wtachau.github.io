{
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "rules": {
    "no-unused-expressions": 0,
    "arrow-body-style": 0,
    "no-multi-spaces": [2, {
      "exceptions": {
        "ImportDeclaration": true,
        "VariableDeclarator": true
      }
    }],
    "radix": [2, "as-needed"],
    "no-param-reassign": [2, {"props": false}],
    "semi": [2, "never"],
    "jsx-quotes": [2, "prefer-single"],
    "max-len": 0,
    "no-named-as-default-member": 0,
    "no-underscore-dangle": 0,
    "import/no-named-as-default-member": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "no-restricted-syntax": 0,
    "comma-dangle": 0,
    "prefer-template": 0,
    "no-console": 0,
    "consistent-return": 1
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  }
}
